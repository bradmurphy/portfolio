#nav-icon
  position absolute
  top 15px
  right 15px
  width 35px
  height 35px
  transform rotate(0deg)
  transition all 0.25s ease-in
  cursor pointer
  z-index 9999
  @media $android
    margin-top 4px
  @media $tablet
    display none
  &.open 
    div 
      &:nth-child(1) 
        top 13px
        width 0%
        opacity 0
        left 50%
      &:nth-child(2)
        transform rotate(45deg)
      &:nth-child(3) 
        transform rotate(-45deg)
      &:nth-child(4) 
        top 13px
        width 0%
        opacity 0
        left 50%

  div 
    display block
    position absolute
    height 5px
    width 100%
    background $navy
    opacity 1
    left 0
    transform rotate(0deg)
    transition all 0.25s ease-out
    &:nth-child(1) 
      top 0px
    &:nth-child(2), &:nth-child(3)
      top 13px
    &:nth-child(4)
      top 26px
  @media $tablet
    display none