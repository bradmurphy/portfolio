nav 
  display none
  
  @media $tablet
    display block
    position relative
    top 50%
    transform translateY(-50%)
    
    ul
      list-style none
      margin 0
      display flex
      flex-flow row wrap
      justify-content flex-end
      li 
        padding 0 15px

        &:nth-child(1)
          padding-left 0

        &:nth-child(3)
          padding-right 0

        a 
          text-decoration none
          display block
          color black
          text-align left
          padding 1em

          &:hover
            text-decoration underline
