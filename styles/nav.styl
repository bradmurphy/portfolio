nav ul
  list-style none
  margin 0
  padding 0
  display flex
  flex-flow column wrap
  justify-content space-around

  @media $laptop
    flex-flow row wrap
    justify-content flex-end
  
  a 
    text-decoration none
    display block
    padding 10px
    color black
    text-align center
    
    @media $laptop
      text-align left
      padding 1em

    &:hover
      text-decoration underline