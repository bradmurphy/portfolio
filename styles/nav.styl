nav 
  display none
  
  @media $tablet
    display block
    position relative
    top 50%
    transform translateY(-50%)
    
    ul
      list-style none
      margin 0
      padding 0
      display flex
      flex-flow row wrap
      justify-content flex-end
      li 
        position relative
        padding 0 15px

        &:nth-child(1)
          padding-left 0
          a
            padding-left 0

        &:nth-child(3)
          padding-right 0
          a
            padding-right 0

        a 
          text-decoration none
          display block
          color black
          padding 1em
          font 700 16px/24px $headFont
          letter-spacing 2px
          text-transform uppercase
          color $navy
          transition all 0.4s ease-out
          &:after
            bottom -2px
            content ''
            display block
            height 2px
            left 0
            position relative
            background $orange
            transition width 0.3s ease 0s, left 0.3s ease 0s
            width 0

          &:hover:after 
            width 98%

    @media $desktop
      max-width 1280px
      margin 0 auto
