// base css structure

body, html
  width 100%
  height 100%
  background white

  .wrap
    display flex
    flex-flow row wrap
    align-content flex-start
    width 100%
    height 100%
    margin 0
    padding 0
    overflow auto

    header
      padding 0 10px
      box-sizing border-box
      flex 1 100%
      height 10%
      @media $android
        padding 0 25px
      @media $tablet
        padding 0 50px

    section
      padding 0 10px
      box-sizing border-box
      flex 1 100%
      height 60%
      overflow auto
      @media $android
        padding 0 25px
      @media $tablet
        padding 0 50px

    footer
      flex 1 100%
      height 30%