// base css structure

body, html
  width 100%
  height 100%
  background white

  .wrap
    display flex
    flex-flow row wrap
    align-content flex-start
    width 100%
    height 100%
    margin 0
    padding 0
    overflow auto

    header
      display none
      @media $tablet
        display block
        padding 0 50px
        box-sizing border-box
        flex 1 100%
        height 10%

    .content
      box-sizing border-box
      flex 1 100%
      height 100%
      overflow-x hidden;
      @media $tablet
        height 60%
        padding 0 25px
        @media $laptop
          padding 0 50px
        
      .content-wrap
        min-width calc(100% + 280px)
        height 100%
        @media $tablet
          min-width 100%
        
        aside
          float left
          margin-left -100%
          width 280px
          height 100%
          background red
          @media $tablet
            display none
        
        section
          float left
          width calc(100% - 280px)
          height 100%
          padding 0 15px
          box-sizing border-box
          @media $tablet
            padding 0 0
            width 100%

    footer
      display none
      @media $tablet
        display block
        flex 1 100%
        height 30%