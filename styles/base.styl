// base css structure

body, html
  width 100%
  height 100%
  background $cream

  .wrap
    display flex
    flex-flow row wrap
    align-content flex-start
    width 100%
    height 100%
    margin 0
    padding 0
    overflow auto

    header
      display none
      @media $tablet
        display block
        padding 0 50px
        box-sizing border-box
        flex 1 100%
        height 10%

    .content
      flex 1 100%
      height 100%
      overflow-x hidden;
      @media $tablet
        height 60%
        
      .content-wrap
        min-width calc(100% + 220px)
        height 100%
        @media $tablet
          min-width 100%
        
        aside
          float left
          margin-left -100%
          width 220px
          height 100%
          background $white
          @media $tablet
            display none
        
        .content
          float left
          width calc(100% - 220px)
          height 100%
          div 
            box-sizing border-box
            padding 0 15px
            @media $tablet
              padding 0 25px
            @media $laptop
              padding 0 50px
          @media $tablet
            width 100%

    footer
      display none
      @media $tablet
        display block
        flex 1 100%
        height 30%