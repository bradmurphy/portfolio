// base css structure

body, html
  width 100%
  height 100%
  background $white

  .wrap
    display flex
    flex-flow row wrap
    align-content flex-start
    width 100%
    height 100%
    margin 0
    padding 0
    overflow auto

    .desktop-header
      display none
      @media $tablet
        display block
        padding 0 50px
        box-sizing border-box
        flex 1 100%
        height 15%
        
      @media $desktop
        padding 0 0
    
    .mobile-header
      display block
      position relative
      background $navy
      flex 1 100%
      height 60px
      @media $tablet
        display none

    .content
      flex 1 100%
      height calc(100% - 60px)
      overflow-x hidden
      @media $tablet
        height 65%
        
      .content-wrap
        min-width calc(100% + 220px)
        height 100%
        @media $tablet
          min-width 100%
        
        #menu
          float left
          margin-left -100%
          width 180px
          height 100%
          background $navy
          @media $tablet
            display none
        
        .pane
          float left
          width calc(100% - 220px)
          height 100%

          @media $tablet
            width 100%

          .view
            position relative
            width 100%
            box-sizing border-box
            padding 70px 15px 0 15px
            @media $tablet
              padding 10px 50px
            @media $laptop
              padding 10px 50px
            @media $desktop
              padding 10px 0
              max-width 1280px
              margin 0 auto

    footer
      display none
      @media $tablet
        display block
        flex 1 100%
        height 20%