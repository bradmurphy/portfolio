.project
  position relative
  min-height 100%


.controls
  position absolute
  top 5px
  width 150px
  height 50px

  @media $tablet
    right 0

  .prev
    float left
    width 50%

  .next
    float right
    width 50%


.project-nav
  display block
  text-align left
  text-decoration none
  text-transform uppercase
  color $navy
  font 700 44px $headFont
  letter-spacing 2px
  box-sizing border-box
  transition all 0.25s ease-out
  &:hover
    color $orange
  
  @media $tablet
    text-align right
    font 700 36px $headFont
