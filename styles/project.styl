.project
  position relative
  min-height 100%


.controls
  position absolute
  top 5px
  width 150px
  height 50px

  @media $tablet
    right 50px
    
  @media $desktop
    right 0

  .prev
    float left
    width 50%

  .next
    float right
    width 50%


.project-nav
  display block
  text-align left
  text-decoration none
  text-transform uppercase
  color $navy
  font 700 44px $headFont
  letter-spacing 2px
  box-sizing border-box
  transition all 0.25s ease-out
  &:hover
    color $orange
  
  @media $tablet
    text-align right
    font 700 36px $headFont

.project-header
  width 100%
  margin-top 16px
  padding 2.75em 0
  box-sizing border-box
  border 1px solid $lightGray
  text-align center
  overflow auto
  box-shadow 0 0 3px 1px rgba(0, 0, 0, 0.1)
  
  h4
    color $orange
    @media $iframe
      display none
  
  &.external
    padding 0
    height 340px
  
  iframe
    display none
    
    @media $iframe
      display block
      margin 0 auto
      border none