.project
  position relative
  min-height 100%

// controls styling
.controls
  position relative
  top 0
  left 50%
  margin-left -75px
  width 150px
  height 55px
  z-index 999

  @media $tablet
    position absolute
    top 0
    left calc(100% - 50px)
    margin-left -150px

  @media $laptop
    top 12px
    left calc(100% - 35px)


  @media $desktop
    left 100%

  .prev
    float left
    width 50%

  .next
    float right
    width 50%

.project-nav
  display block
  text-align center
  text-decoration none
  text-transform uppercase
  color $orange
  font 700 44px $headFont
  letter-spacing 2px
  box-sizing border-box
  transition all 0.25s ease-out
  &:hover
    color $orange

  @media $tablet
    color $navy
    text-align right
    font 700 36px $headFont

// project header styling
.project-header
  position relative
  width 100%
  text-align center
  overflow auto
  box-sizing border-box

  .sorry
    color $orange
    @media $iframe
      display none

  .adblock
    display none
    @media $iframe
      display block
      color $orange

  .fa-refresh
    display none
    @media $iframe
      display block
      margin 10px auto 0 auto
      cursor pointer
      color $navy

  .fa-external-link
      display block
      margin 30px auto 0 auto
      cursor pointer
      color $navy

  iframe
    display none

    @media $iframe
      display block
      margin 0 auto
      border none

  .banner
    width 100%
    height 250px
    margin 0 auto
    background-size cover !important
    border 1px solid $navy
    box-sizing border-box

    @media $iframe
      background-size 970px 250px !important
      width 970px

// project content styling
.project-content
  position relative
  top 16px
  display flex
  display -webkit-box
  display -moz-box
  display -ms-flexbox
  display -webkit-flex
  flex-flow row wrap
  -webkit-flex-flow row wrap
  align-content flex-start
  width 100%
  margin 0 0 35px 0
  padding 0 0 20px 0

  .sidebar
    width 100%
    flex 1
    -ms-flex 1
    -webkit-flex 1
    -moz-box-flex 1
    -webkit-box-flex 1
    order 1
    -ms-flex-order 1
    -webkit-order 1
    -moz-box-ordinal-group 1
    -webkit-box-ordinal-group 1
    height auto
    margin-top 16px
    border 1px solid $lightGray
    box-shadow 0 0 3px 1px rgba(0, 0, 0, 0.1)
    box-sizing border-box

    @media $tablet
      width 275px

  article
    width 100%
    order 2
    -ms-flex-order 2
    -webkit-order 2
    -moz-box-ordinal-group 2
    -webkit-box-ordinal-group 2
    margin-top 16px
    box-sizing border-box

    @media $tablet
      width calc(100% - 275px)
      padding-left 2em
      margin-top 2px

// sidebar styling
.date
  float left
  width 100%
  padding 1.5em 2em
  box-sizing border-box

  span
    font 400 14px/18px $headFont
    color $black

    strong
      color $navy
      margin-right 2px

.tech
  float left
  width 100%
  padding 0 2em 1.5em 2em
  box-sizing border-box

  span
    font 400 14px/18px $headFont
    color $black

    strong
      color $navy

  ul
    margin 0
    padding 10px 1em
    li
      font 400 14px/18px $headFont
      color $black

.crafted
  float left
  width 100%
  height auto
  padding 0 2em 1.5em 2em
  box-sizing border-box

  .made
    position relative
    left 50%
    width 197px
    margin-bottom 15px
    transform translateX(-50%)

  .client-logo
    position relative
    left 50%
    width auto
    height 40px
    transform translateX(-50%)
