.project
  position relative
  min-height 100%

.next
  width 50%
  position fixed
  right 0
  bottom 0

  @media $tablet
    bottom 20%

.prev
  width 50%
  position fixed
  left 0
  bottom 0
  
  @media $tablet
    bottom 20%

.project-nav
  display block
  text-align center
  text-decoration none
  text-transform uppercase
  color $navy
  font 600 32px/48px $headFont
  letter-spacing 2px
  padding 0.5em 0
  transition all 0.25s ease-out