// page styles
.hook
  color $hook
  text-decoration underline

.link
  float left
  color $orange
  text-decoration underline
  clear both

.about
  
  div
    width 100%
    
    .profile
      float left
      width 100%
      
      @media $laptop
        width 50%
      
      div
        width 300px
        height 200px
        margin 0 auto
        background url('../images/standard.gif') no-repeat
        background-size 100%
        transition all 0.25s ease-out

        &:hover
          background url('../images/hover.gif') no-repeat
          background-size 100%
        
        @media $laptop
          width 435px
          height 290px
          margin 0 0

        @media $desktop
          width 600px
          height 400px

    article
      float left
      width 100%
      margin-top 24px
      
      @media $laptop
        margin-top 0
        width 50%

      p
        margin-top -5px
        width 100%
        
        @media $laptop
          max-width 545px

.contact article p
  margin-top -5px

.contact br
  display none
  
  @media $android
    display block

.contact-block
  float left
  width 278px
  
  .sig
    width 300px
    margin-left -10px
    clear both
  
  .email
    float left
    width 100%
    color $navy
    text-decoration underline
    text-align right
    clear both
  
  ul
    float right
    margin 10px 0 0 0
    padding 0
    list-style none
    li
      text-align right
      display inline-block
      a
        padding-left 15px
        font-size 1.75em
        color $orange
