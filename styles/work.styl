.work
  clear both
  width 100%
  padding 0
  margin 0 auto
  display flex
  display -ms-flexbox
  display -webkit-flex
  flex-flow row wrap
  -webkit-flex-flow row wrap
  justify-content space-between
  -webkit-justify-content space-between

  a
    display flex
    position relative
    margin-bottom 25px
    width 100%
    height 200px
    border 1px solid $lightGray
    background-size cover !important
    box-shadow 0 0 3px 1px rgba(0, 0, 0, 0.1)
    box-sizing border-box
    @media $android
      width 48%
      height 200px
    @media $tablet
      width 225px
      height 225px

    div
      position absolute
      background $navy
      width 100%
      height 40px
      top 50%
      transform translateY(-50%)
      padding 10px
      border-top 1px solid $orange
      border-bottom 1px solid $orange
      box-sizing border-box
      text-align center

      span
        color $white
